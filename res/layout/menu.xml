<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_list_authors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_database"
        android:text="@string/btn_list_authors" />

    <Button
        android:id="@+id/btn_open_music_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_open_music_player" 
        android:drawableLeft="@drawable/music"
        />
    
    <Button
        android:id="@+id/btn_open_streaming_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_open_streaming_player" 
        android:drawableLeft="@drawable/streaming"
        />
    
    <Button
        android:id="@+id/btn_open_video_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_open_video_player" 
        android:drawableLeft="@drawable/video"
        />

    <Button
        android:id="@+id/btn_synchronize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_sync"
        android:text="@string/btn_synchronize" />

</LinearLayout>
